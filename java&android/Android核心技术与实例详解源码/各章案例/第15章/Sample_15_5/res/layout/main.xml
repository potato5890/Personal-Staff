<?xml version="1.0" encoding="utf-8"?><!-- 声明版本号以及编码格式 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/img"
    ><!-- 定义一个垂直的线性布局 -->
	<TextView  
		android:id="@+id/title"
		android:gravity="center_horizontal"
		android:textSize="20px"
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content" 
	    android:text="@string/title"/><!-- 添加一个TextView控件 -->
    <EditText
    	android:id="@+id/myEditText"
    	android:layout_width="fill_parent" 
	    android:layout_height="wrap_content" /><!-- 添加一个EditText控件 -->
    <WebView  
    	android:id="@+id/myWebView"
    	android:focusable="false"  
    	android:layout_width="fill_parent" 
	    android:layout_height="wrap_content" /><!-- 添加一个WebView控件 -->
	<TextView  
		android:id="@+id/help"
		android:textSize="12px"
		android:textColor="@drawable/white"
	    android:layout_width="fill_parent" 
	    android:layout_height="fill_parent" 
	    android:text="@string/help"/><!-- 在添加一个TextView控件 -->	    	    
</LinearLayout>
